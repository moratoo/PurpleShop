# PurpleShop Backend Environment Configuration

# Project Settings
PROJECT_NAME="PurpleShop API"
VERSION="1.0.0"
DESCRIPTION="Backend API for PurpleShop marketplace"
API_V1_STR="/api/v1"

# Server Settings
HOST="0.0.0.0"
PORT=8000
DEBUG=true

# CORS Settings (comma-separated URLs)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173"

# Database Settings
# For PostgreSQL (recommended for production)
DATABASE_URL="postgresql+asyncpg://purpleshop:purpleshop@localhost/purpleshop"

# For SQLite (development only)
SQLITE_URL="sqlite+aiosqlite:///./purpleshop.db"

# JWT Settings
SECRET_KEY="your-super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth Settings (configure in production)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""

# File Upload Settings
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
ALLOWED_EXTENSIONS=".jpg,.jpeg,.png,.gif"

# Redis Settings (for caching and sessions)
REDIS_URL="redis://localhost:6379"
REDIS_CACHE_TTL=300

# Email Settings (for notifications)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST="smtp.gmail.com"
SMTP_USER=""
SMTP_PASSWORD=""
EMAILS_FROM_EMAIL="noreply@purpleshop.com"
EMAILS_FROM_NAME="PurpleShop"

# External APIs
SENTRY_DSN=""

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100